{{#if user.imageUrl}}
<div class='profile-container'>
  <div class='show-profile'>
    <div>
      <img src='{{user.imageUrl}}' class='show-image gridCentered' style='border-radius: 10px;' height='300px' width='400px'>
    </div>
    <div>
      <div class='profile-links'>
      <h3>{{user.first}} {{user.last}}</h3>
      <p>{{user.school}}</p>
      <p>{{user.email}}</p>
      <p>{{user.tel}}</p>
      <p>{{user.class}}</p>
      <div class="btn-group-vertical">
        <a href='/users/{{user._id}}/edit' class='btn btn-dark'>Edit Profile</a>
        <a href='/users/{{user._id}}/reviews/' class='btn btn-dark'>Read Your Reviews</a>
      </div>
      </div>
    </div>
    </div>
  </div>
  {{else}}
  <div class='profile-container'>
  <div class='show-profile'>
    <div>
      <img src='https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909__340.png' class='show-image gridCentered' style='border-radius: 10px;' height='300px' width='400px'>
    </div>
    <div>
      <div class='profile-links'>
      <h3>{{user.first}} {{user.last}}</h3>
      <p>{{user.school}}</p>
      <p>{{user.email}}</p>
      <p>{{user.tel}}</p>
      <p>{{user.class}}</p>
      <div class="btn-group-vertical">
        <a href='/users/{{user._id}}/edit' class='btn btn-dark'>Edit Profile</a>
        <a href='/users/{{user._id}}/reviews/' class='btn btn-dark'>Read Your Reviews</a>
      </div>
      </div>
    </div>
    </div>
  </div>
{{/if}}
